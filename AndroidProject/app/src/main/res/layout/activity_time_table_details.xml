<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TimeTableDetailsActivity">

    <TextView
        android:id="@+id/details_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/td"
        android:elevation="2dp"
        android:lines="2"
        android:padding="32dp"
        android:text=""
        android:textSize="25sp" />

    <TextView
        android:id="@+id/details_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:drawableStart="@drawable/ic_access_time_24px"
        android:drawablePadding="16dp"
        android:text=""
        android:textAlignment="textStart"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="8dp"
        android:background="@color/lightGray" />

    <TextView
        android:id="@+id/details_room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:drawableStart="@drawable/ic_room_24px"
        android:drawablePadding="16dp"
        android:text=""
        android:textAlignment="textStart"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="8dp"
        android:background="@color/lightGray" />

    <LinearLayout
        android:id="@+id/details_tutors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:drawableStart="@drawable/ic_people_24px"
            android:drawablePadding="16dp"
            android:text="@string/tuteur_s"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="18sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="8dp"
        android:background="@color/lightGray" />

    <TextView
        android:id="@+id/details_groups"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:drawableStart="@drawable/ic_school_24px"
        android:drawablePadding="16dp"
        android:text=""
        android:textAlignment="textStart"
        android:textSize="18sp" />
</LinearLayout>